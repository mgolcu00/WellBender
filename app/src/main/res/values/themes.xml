<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WellBender" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="BaseTextStyle" >
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/deep</item>
    </style>

    <style name="Text.Body" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>
    <style name="Text.Small" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>
    <style name="Text.Header" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_40sp</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>
    <style name="Text.Header.Small" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>
    <style name="Text.Header.Tiny" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>


    <dimen name="text_size_18sp">18sp</dimen>
</resources>